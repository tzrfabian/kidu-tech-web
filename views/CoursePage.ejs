<%- include('partials/Header') %>

<div class="container">
    <h1>List All Courses</h1>
    <hr>
    <% if (msg) { %>
        <div class="alert alert-success" role="alert">
            <%= msg %>
          </div>
    <% } %>
    <a href="/course/add" class="btn btn-success mb-4">Add Course</a>
    <div class="row row-cols-1 row-cols-md-4 g-3">
        <% data.forEach(el => { %>
            <div class="col">
                <div class="card h-100"> <!-- h-100 nyamain tinggi semua card -->
                    <img src="<%= el.courseImg %>" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column"> <!-- ngebuat align content -->
                      <h5 class="card-title fw-bold d-flex justify-content-center"><%= el.name %></h5>
                      <h6 class="text-center text-secondary-emphasis">Durasi Belajar: <%= el.duration %> Menit</h6>
                      <!-- <h6 class="text-center text-secondary"></h6> -->
                      <p><%= el.description %></p>
                      <p class="fw-semibold">Status: </p>
                      <div class="mt-auto">
                          <a href="" class="btn btn-outline-warning d-flex justify-content-center fw-semibold">Belajar</a>
                          <a href="/course/edit/<%= el.id %>" class="btn btn-outline-secondary d-flex justify-content-center fw-semibold mt-2 mb-2">Edit</a>
                          <a href="/course/delete/<%= el.id %>" class="btn btn-outline-danger d-flex justify-content-center fw-semibold">Delete</a>
                      </div>
                    </div>
                  </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/Footer') %>